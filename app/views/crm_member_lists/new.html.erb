<h1>Sign up</h1>
<%= form_for(@member) do |f| %> 
  <%= render 'shared/error_messages'%>
  <div class="field">
  	<%= f.label :passport %><br />
  	<%= f.text_field :mbr_id %>
  </div>
  
  <div class="field">
  	<%= f.label :password %><br />
  	<%= f.password_field :password %>  
  </div>	
  
  <div class="field">
  	<%= f.label :password_confirmation, "Confirmation" %><br />
  	<%= f.password_field :password_confirmation %>
  </div>
  
  <div class="actions">
  	<%= f.submit "Sign up" %>
  </div>
<% end %>   		
