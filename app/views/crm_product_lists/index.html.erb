<h1>All products</h1>
<table>
  <tr>
  	<th>Coy_id</th>
    <th>Item_id</th>
    <th>Loc_id</th>
    <th>Item_Desc</th>
    <th>Quantity_on_hand</th>
    <th>Create_date</th>
    <th>Modify_date</th>
  </tr>


<% @products.each do |product| %>
  <tr>
  	<td><%= product.coy_id %></td>
    <td><%= product.item_id %></td>
    <td><%= product.loc_id %></td>
    <td><%= product.item_desc %></td>
    <td><%= product.qty_on_hand %></td>
    <td><%= product.created_on %></td>
    <td><%= product.updated_on %></td>    
    <td><%= link_to 'Show', crm_product_list_path(product)%></td> 
  </tr>  
<% end %>
<%= link_to 'Add Products ', new_crm_product_list_path %>
</table>
